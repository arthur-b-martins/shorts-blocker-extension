{
  "manifest_version": 3,
  "name": "YouTube Shorts Blocker",
  "version": "0.1",
  "description": "Removes Shorts from YouTube feed and redirects Shorts videos to the normal player.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "36": "icon36.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}